<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/pokemon_fragment_gradient_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="0dp" />

        <!-- Estrella de favoritos arriba a la derecha -->
        <ImageButton
            android:id="@+id/btn_favorite"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_star_outline"
            android:padding="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:focusable="true"
            android:clickable="true"
            app:tint="@null" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_pokemon_image"
            android:layout_width="0dp"
            android:layout_height="260dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/pokemon_image"
                android:layout_width="220dp"
                android:layout_height="240dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                tools:src="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/card_pokemon_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Nombre e ID centrados -->
            <TextView
                android:id="@+id/pokemon_details_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:textColor="@color/title_text"
                android:textAlignment="center"
                tools:text="Bulbasaur" />

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:orientation="horizontal"
                 android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/pokemon_details_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    tools:text="#001" />
            </LinearLayout>

            <!-- Chips de tipos -->
            <LinearLayout
                android:id="@+id/pokemon_type_chips_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/pokemon_type_chip1"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/pokemon_type_chip2"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text=""
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/darker_gray" />

            <!-- Altura y peso -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pokemon_height"
                        android:textStyle="bold"
                        android:textColor="@color/label_text" />

                    <TextView
                        android:id="@+id/pokemon_details_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        tools:text="0.7 m" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pokemon_weight"
                        android:textStyle="bold"
                        android:textColor="@color/label_text" />

                    <TextView
                        android:id="@+id/pokemon_details_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        tools:text="6.9 kg" />
                </LinearLayout>
            </LinearLayout>

            <!-- Descripción -->
            <TextView
                android:id="@+id/pokemon_details_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/text_primary"
                android:text=""
                android:background="@android:color/transparent"
                android:gravity="start"
                tools:text="Este Pokémon tiene una semilla en su lomo desde que nace. La semilla crece poco a poco." />

            <!-- Card para ratio de captura (ahora igual que habilidades) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:strokeColor="@color/stroke_card_abilities"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Etiqueta de ratio de captura -->
                    <TextView
                        android:id="@+id/pokemon_capture_rate_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ratio de captura"
                        android:textStyle="bold"
                        android:textColor="@color/label_text"
                        android:textSize="16sp"
                        android:background="@android:color/transparent"
                        />

                    <!-- Explicación de ratio de captura -->
                    <TextView
                        android:id="@+id/pokemon_capture_rate_explanation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Indica la facilidad o dificultad para atrapar este Pokémon. Cuanto mayor es el número, más fácil es capturarlo."
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp"
                        android:background="@android:color/transparent"
                        />

                    <!-- Tasa de captura -->
                    <LinearLayout
                        android:id="@+id/pokemon_capture_rate_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/pokeball_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_pokeball" />

                        <TextView
                            android:id="@+id/pokemon_capture_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="45 - Dificil"
                            android:textColor="@color/text_secondary"
                            android:textSize="18sp"
                            android:layout_marginStart="10dp"
                            android:textStyle="italic"
                            android:background="@android:color/transparent" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Habilidades -->
            <TextView
                android:id="@+id/pokemon_abilities_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pokemon_abilities"
                android:layout_marginTop="24dp"
                android:background="@android:color/transparent"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/label_text" />

            <LinearLayout
                android:id="@+id/pokemon_abilities_cards_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <!-- Repite esto para cada habilidad -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/habilidadCard1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:strokeColor="@color/stroke_card_abilities"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/habilidadNombre1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/label_text"
                            android:text="" />

                        <TextView
                            android:id="@+id/habilidadDesc1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/text_primary"
                            android:text=""
                            android:background="@android:color/transparent"
                            android:gravity="start"
                            android:visibility="gone" />
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/habilidadCard2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:strokeColor="@color/stroke_card_abilities"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/habilidadNombre2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/label_text"
                            android:text="" />

                        <TextView
                            android:id="@+id/habilidadDesc2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/text_primary"
                            android:text=""
                            android:background="@android:color/transparent"
                            android:gravity="start"
                            android:visibility="gone" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/habilidadCard3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:strokeColor="@color/stroke_card_abilities"
                    app:strokeWidth="1dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">
                        <TextView
                            android:id="@+id/habilidadNombre3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/label_text"
                            android:text="" />
                        <TextView
                            android:id="@+id/habilidadDesc3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/text_primary"
                            android:text=""
                            android:background="@android:color/transparent"
                            android:gravity="start"
                            android:visibility="gone" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Puedes copiar el bloque anterior para más habilidades -->

            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/loading_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
